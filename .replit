modules = ["python-3.11", "python3"]
[agent]
integrations = ["python_anthropic:1.0.0", "python_openai:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libsodium", "unzip"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Analytics IA"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Solana API"

[[workflows.workflow]]
name = "Analytics IA"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run analytics/main_analytics.py --server.port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Solana API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python launchers/start_solana_api.py"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000
